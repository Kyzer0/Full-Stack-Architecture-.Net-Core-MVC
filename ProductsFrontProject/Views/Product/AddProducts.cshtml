@model ProductsAPIProject.Models.ProductsModel

<h2>Add Product</h2>
<form asp-action="AddProducts" method="post">
    <label>Name:</label>
    <input asp-for="ProductName" required />
    
    <label>Description:</label>
    <input asp-for="ProductDescription" required />

    <label>Price:</label>
    <input asp-for="ProductPrice" required />

    <button type="submit">Add</button>
</form>
<a href="@Url.Action("GetAllProducts")">Back</a>
